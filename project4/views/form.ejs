      <input name="dasEssen" type="text" placeholder="das Essen" required />
      <input name="dieStandort" type="text" placeholder="der Standort" required />
      <input type="submit" value="add to database" />
    </form>

    <div class="posts">
      <% for(let post of posts){ %>
      <span><%= post.date %></span>
      <p><strong>Essen:</strong> <%= post.dasEssen || post.text %></p>
      <p><strong>Standort:</strong> <%= post.dieStandort || 'â€”' %></p>
      <% } %>
    </div>
  </body>
</html>
